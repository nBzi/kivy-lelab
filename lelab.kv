#:import layout_exemples layout_exemples
#:import widget_exemples widget_exemples
#:import navigation_screen_manager navigation_screen_manager
#:import boxlayout_with_action_bar boxlayout_with_action_bar
#:import canvas_exemples canvas_exemples

<MenuPrincipal@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "Layouts"
        on_press: app.manager.push("PageLayoutExemple")
    Button:
        text: "Widgets"
        on_press: app.manager.push("WidgetsExemple")
    Button:
        text: "Images"
        on_press: app.manager.push("ImagesExemple")
    Button:
        text: "Canvas"
        on_press: app.manager.push("CanvasExemple")

<MyScreenManager>:
    Screen: 
        name: "Menu Principal"
        MenuPrincipal:
    Screen:
        name: "PageLayoutExemple"
        BoxLayoutWithActionBar:
            title: "Layouts"
            LayoutExemplesTabs:
    Screen:
        name: "WidgetsExemple"
        BoxLayoutWithActionBar:
            title: "Widgets"
            WidgetsExemple:
    Screen:
        name: "ImagesExemple"
        BoxLayoutWithActionBar:
            title: "Images"
            ImagesExemple:
    Screen:
        name: "CanvasExemple"
        BoxLayoutWithActionBar:
            title: "Canvas"
            CanvasExemple:
