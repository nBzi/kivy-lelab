
ImagesExemple:

<ImagesExemple@GridLayout>:
    cols: 3
    Image:
        source: "images/cake.jpg"
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
        keep_ratio: False
    AsyncImage:
        source: "images/donut.gif"
        anim_delay: 1/60

<WidgetsExemple>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text:"Compter"
        on_press: root.on_button_click()
        disabled: not root.compteur_actif
    Label:
        text:root.mon_texte
        font_name: "fonts/Lcd.ttf"
        font_size: '80dp'
        color: 1, .5, 1, 1
    Switch:
        id : mon_switch
        on_active: root.on_switch_active(self)
        active: True
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: mon_slider
        min: 0
        max: 100
        value: 50
        # on_value: root.on_slider_value(self)
        orientation: "vertical"
        disabled: not mon_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(mon_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: '80dp'
            color: 1, .5, 1, 1
        ProgressBar:
            max: 100
            value: mon_slider.value
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        text: "toto"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Vous êtes: " + root.text_input_str

<PageLayoutExemple@PageLayout>:
    MainWidget
    StackLayoutExemple:
    BoxLayoutExemple:
    AnchorLayoutExemple:
    GridLayoutExemple:


<ScrollViewExemple@ScrollView>:
    StackLayoutExemple:
        size_hint: 1, None
        height: self.minimum_height


<StackLayoutExemple>:
    # left-right, top-bottom
    # orientation: "lr-bt"
    padding: ("20dp", "20dp", "20dp", "20dp")
    # spacing: "20dp", "20dp"


<GridLayoutExemple>:
    # rows
    # cols
    cols: 3
    Button:
        text:"A"
        size_hint: None, 1
        width: "60dp"
    BoxLayoutExemple
    Button:
        text:"C"
    Button:
        text:"D"
        size_hint: None, 1
        width: "60dp"
    Button:
        text:"E"
    Button:
        text:"F"

<AnchorLayoutExemple>:
    # à utiliser à la déclaration pour connaitre le positionnement
    # right, left, center_x
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text:"A"
        Button:
            text:"B"
 


<BoxLayoutExemple>:
    orientation: "horizontal"
    spacing: "10dp"
    Button:
        text: "A"
        size_hint: .5, .5
        # size: "100dp", "60dp"
        # height: "60dp"
        # x, right, center_x une seule valeur à chaques fois
        # y, top, center_y
        pos_hint: { "center_y": .5}
    BoxLayout:
        orientation: "vertical"     
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Button:
        text: "C"


<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "60dp"
        pos: "200dp", "100dp"
        color: 0, 0, 1, 1
    
    Label:
        text: "Hello2"
        size: "100dp", "60dp"
        pos: "400dp", "200dp"
        color: 1, 0, 0, 1
